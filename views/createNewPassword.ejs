<!DOCTYPE html>
<html lang="en">

<!-- HEAD -->

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Password</title>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script type="text/javascript" src="/scripts/generatePasswordCreate.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- CSS STYLE SHEETS -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300;1,400;1,600;1,800;1,900&display=swap"
    rel="stylesheet">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@1,900&family=Zen+Dots&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

</head>


<!-- BODY CONTENT -->

<body>
  <!-- NAV BAR -->
  <nav id="nav-bar" class="nav-bar">
    <%- include('./partials/nav') %>
  </nav>
  <div id="main-container2" class="updateFormContainer">

    <form id="generateForm" class="generateForm">
      <div id="generationForm">
        <div class="checkAllThatApply">
          <p class="spanCheck">Check all that apply:</p>
        </div>
        <p class="instructions">Default password will contain 15 characters of any type</p>
        <div class="checkboxes">
          <div class="checkBox1">
            <input class="check1Style" type="checkbox" name="upperCase" id="upperCase" value="UpperCase">
            <label for="upperCase">Allow Uppercase</label>
          </div>
          <div class="checkBox2">
            <input class="check2Style" type="checkbox" name="lowerCase" id="lowerCase" value="LowerCase">
            <label for="lowerCase">Allow Lowercase</label>
          </div>
          <div class="checkBox3">
            <input class="check3Style" type="checkbox" name="specialChar" id="specialChar" value="specialChar">
            <label for="specialChar">Allow Special Characters</label>
          </div>
          </br>
        </div>
        <div class="enterCharacterLength">
          <label for="charLength">Password Length</label>
          <input type="number" min="1" name="charLength" id="charLength" value="charLength" style="border: none;">
        </div>
        <button type="submit" id="generate-test">Generate</button>
      </div>
    </form>
    <main style="margin: 1em;">
      <form class="form-inline" id="newForm">
        <div class="form-group-mb-2" style="font-family: Zen Dots;">
          <label>Create New Credential</label>
          <input name="websitename" id="websitename" class="form-control" type="text" placeholder="Website name"
            style="width: 300px; margin: 1em">
          <input name="websiteurl" id="websiteurl" class="form-control" type="text" placeholder="Website URL"
            style="width: 300px; margin: 1em">
          <input name="username" id="username" class="form-control" type="text" placeholder="Username"
            style="width: 300px; margin: 1em">
          <p class="instructions">Generate a password using the tool above or enter a custom password here:</p>
          <textarea class="form-control" id="password" type="text" placeholder="Password"
            style="width: 300px; margin: 1em; resize: none" rows="1"></textarea>
          <label for="category">Choose a category:</label>
          <select name="category" id="category">
            <option value="social">Social Media</option>
            <option value="work">Work</option>
            <option value="entertainment">Entertainment</option>
          </select>
          <button id="submitNewPasswordButton" type="button">Submit</button>
          <div class="warning" style="font-family: Zen Dots; color: #0f539b;
          opacity: 0.7;"></div>
        </div>
      </form>
  </div>
  </main>
  </div>




</body>

</html>